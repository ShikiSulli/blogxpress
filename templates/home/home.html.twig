{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div class="row text-center mt-5 mb-5 rounded py-5 bx-meteor text-white">
		<h1>BlogXpress</h1>
		<h4>Tout sur l'actu des vacances en xpress</h4>
	</div>

	<hr>

	<div class="row justify-content-center">

		<h4 class="text-center">Les derniers articles</h4>

		{% for item in articles %}				
			<div class="card text-bg-dark m-3 col-md-3">
				<img src="{{ asset('images/articles') }}/{{ item.image }}" class="card-img" alt="{{ item.title }}">
				<div class="card-img-overlay">
					<h5 class="card-title">{{ item.title }}</h5>
					<p class="card-text">
						<small>{{ item.category.name }}</small>
					</p>
					<a href={{ path('article', { id: item.id }) }} class="btn btn-sm btn-warning rounded-pill">Lire l'article</a>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
